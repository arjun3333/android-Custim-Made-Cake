<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details"
    android:background="@color/white">
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/home"
        android:id="@+id/detailshome"/>

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:text="Chocolate Cake"
        android:textStyle="bold"
        android:textColor="@color/brown"
        android:gravity="center"
        android:fontFamily="cursive"
        android:id="@+id/text1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        android:text="Details:"
        android:textColor="@color/brown"
        android:gravity="center"
        android:id="@+id/detail2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/detail2"
        android:text="This Chocolate Cake is around 637 calories, with 38 grams of fat, 32 grams of carbs, and 20 grams of sugar."
        android:textColor="@color/brown"
        android:layout_margin="10dp"
        android:id="@+id/detail3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/detail3"
        android:text="Price: $60"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/detail4"/>



    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Add to Cart"
        android:textColor="@color/brown"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail3"
        app:layout_constraintVertical_bias="0.38" />


</androidx.constraintlayout.widget.ConstraintLayout>