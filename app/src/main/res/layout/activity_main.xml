<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover"
        android:textSize="30dp"
        android:textColor="@color/brown"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/man"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="330dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custombtn1"
        android:text="Search"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/grey"
        android:textSize="25dp"
        android:layout_marginRight="20dp"/>
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/ic_search"
        android:layout_marginLeft="350dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="140dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/custombtn1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="150dp"
                android:text="Create Your Own Cake with Make My Cake"
                android:textColor="@color/brown"
                android:textSize="20dp" />

            <Button
                android:id="@+id/orderbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="110dp"
                android:text="Order Now"
                android:textColor="@color/brown"
                android:textSize="20dp"
                android:background="@drawable/custombtn"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/homecake" />
        </RelativeLayout>



        <LinearLayout
            android:layout_marginTop="@dimen/fifty"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_margin="2dp"
                android:padding="10dp"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:id="@+id/recyclerViewProducts"
                android:layout_height="300dp"
                />
            <!-- <ImageView
                 android:layout_width="300dp"
                 android:layout_height="250dp"
                 android:background="@drawable/cake30"/>
             <ImageView
                 android:layout_width="300dp"
                 android:layout_height="250dp"
                 android:background="@drawable/cake24"
                 android:layout_marginLeft="15dp"/>
             <ImageView
                 android:layout_width="300dp"
                 android:layout_height="250dp"
                 android:background="@drawable/cake25"
                 android:layout_marginLeft="15dp"/>
             <ImageView
                 android:layout_width="300dp"
                 android:layout_height="250dp"
                 android:background="@drawable/cake26"
                 android:layout_marginLeft="15dp"/>
             <ImageView
                 android:layout_width="300dp"
                 android:layout_height="250dp"
                 android:background="@drawable/cake27"
                 android:layout_marginLeft="15dp"/>-->
        </LinearLayout>



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pre Made Cakes"
        android:textSize="23dp"
        android:textColor="@color/brown"
        android:textStyle="italic"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="120dp"/>


    <Button
        android:id="@+id/miBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="670dp"
        android:background="@drawable/record"
        android:text="Create"
        android:textSize="10dp"
        android:fontFamily="cursive"
        tools:ignore="TextContrastCheck"
        android:textColor="@color/brown"/>


    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/brown"
        app:layout_anchor="@+id/miBtn"
        app:layout_anchorGravity="bottom|center"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/brown"
            app:elevation="0dp"
            app:menu="@menu/bottom_nav" />
    </com.google.android.material.bottomappbar.BottomAppBar>


</androidx.coordinatorlayout.widget.CoordinatorLayout>

